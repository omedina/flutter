{
  "manifest_version": 3,
  "name": "flutter",
  "description": "This extension neutralizes your Twitter feed using OpenAI.",
  "version": "0.1",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}